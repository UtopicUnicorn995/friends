<div class="p-5 mb-4 bg-body-tertiary rounded-3 border">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"><%= @friend.first_name%> <%= @friend.last_name%></h1>
        <br>
        <p class="col-md-8 fs-4"><%= @friend.email%> | <%= @friend.phone%> | <%= @friend.twitter%></p>
        <br>
        <br>
        
          <%= link_to "Edit this friend", edit_friend_path(@friend), class:'btn btn-success' %>
        </br>
          <%= button_to "Destroy this friend", @friend, method: :delete, class:'btn btn-danger' %>
        
      </div>
</div>

<div>
  <%= link_to "Back to friends", friends_path, class:'btn btn-secondary' %>
</div>
